<Window x:Class="ModemPoolManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="مدير المودمات - Modem Pool Manager" 
        Height="800" Width="1200"
        FlowDirection="RightToLeft"
        Background="#1E1E2E"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#4C6EF5"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#5C7CFA"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#4A4A5A"/>
                    <Setter Property="Foreground" Value="#888"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="GreenButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#40C057"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#51CF66"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="OrangeButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#FD7E14"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF922B"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#2D2D3D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#4C6EF5"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style x:Key="CardPanel" TargetType="Border">
            <Setter Property="Background" Value="#2D2D3D"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Style="{StaticResource CardPanel}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="مدير المودمات" FontSize="28" FontWeight="Bold" Foreground="#4C6EF5" Margin="0,0,20,0"/>
                    <TextBlock Text="{Binding ConnectedCount, StringFormat='المتصل: {0}'}" 
                               FontSize="16" Foreground="#40C057" VerticalAlignment="Center" Margin="10,0"/>
                    <TextBlock Text="|" FontSize="16" Foreground="#666" VerticalAlignment="Center" Margin="5,0"/>
                    <TextBlock Text="{Binding TotalPorts, StringFormat='الكل: {0}'}" 
                               FontSize="16" Foreground="#888" VerticalAlignment="Center" Margin="10,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="تحديث المنافذ" Command="{Binding RefreshPortsCommand}" 
                            Style="{StaticResource ModernButton}" IsEnabled="{Binding IsProcessing, Converter={StaticResource InverseBoolConverter}}"/>
                    <Button Content="جلب الأرقام" Command="{Binding GetPhoneNumbersCommand}" 
                            Style="{StaticResource GreenButton}" IsEnabled="{Binding IsProcessing, Converter={StaticResource InverseBoolConverter}}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- USSD Controls -->
        <Border Grid.Row="1" Style="{StaticResource CardPanel}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Main USSD Input -->
                <Grid Grid.Row="0" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBox Text="{Binding UssdCode, UpdateSourceTrigger=PropertyChanged}" 
                             Style="{StaticResource ModernTextBox}" 
                             FontSize="20" FontWeight="Bold"
                             FlowDirection="LeftToRight"/>
                    
                    <Button Grid.Column="1" Content="تنفيذ على الكل" 
                            Command="{Binding ExecuteUssdCommand}"
                            Style="{StaticResource OrangeButton}"
                            FontSize="18" Padding="30,10"
                            IsEnabled="{Binding IsProcessing, Converter={StaticResource InverseBoolConverter}}"/>
                </Grid>

                <!-- Quick USSD Buttons -->
                <StackPanel Grid.Row="1" Orientation="Horizontal">
                    <TextBlock Text="أوامر سريعة:" Foreground="#888" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    
                    <TextBox Text="{Binding CustomUssd1, UpdateSourceTrigger=PropertyChanged}" 
                             Width="100" Style="{StaticResource ModernTextBox}" FontSize="14" FlowDirection="LeftToRight"/>
                    <Button Content="تنفيذ" Command="{Binding ExecuteCustomUssd1Command}" 
                            Style="{StaticResource ModernButton}" Padding="15,8"
                            IsEnabled="{Binding IsProcessing, Converter={StaticResource InverseBoolConverter}}"/>

                    <TextBox Text="{Binding CustomUssd2, UpdateSourceTrigger=PropertyChanged}" 
                             Width="100" Style="{StaticResource ModernTextBox}" FontSize="14" Margin="20,0,0,0" FlowDirection="LeftToRight"/>
                    <Button Content="تنفيذ" Command="{Binding ExecuteCustomUssd2Command}" 
                            Style="{StaticResource ModernButton}" Padding="15,8"
                            IsEnabled="{Binding IsProcessing, Converter={StaticResource InverseBoolConverter}}"/>

                    <TextBox Text="{Binding CustomUssd3, UpdateSourceTrigger=PropertyChanged}" 
                             Width="100" Style="{StaticResource ModernTextBox}" FontSize="14" Margin="20,0,0,0" FlowDirection="LeftToRight"/>
                    <Button Content="تنفيذ" Command="{Binding ExecuteCustomUssd3Command}" 
                            Style="{StaticResource ModernButton}" Padding="15,8"
                            IsEnabled="{Binding IsProcessing, Converter={StaticResource InverseBoolConverter}}"/>

                    <Button Content="تحديد الكل" Command="{Binding SelectAllModemsCommand}" 
                            Style="{StaticResource ModernButton}" Margin="30,0,0,0"/>
                    <Button Content="إلغاء التحديد" Command="{Binding DeselectAllModemsCommand}" 
                            Style="{StaticResource ModernButton}"/>
                    <Button Content="مسح النتائج" Command="{Binding ClearResultsCommand}" 
                            Style="{StaticResource ModernButton}" Background="#E03131"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Modems List -->
            <Border Grid.Column="0" Style="{StaticResource CardPanel}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="المودمات المتصلة" FontSize="18" FontWeight="Bold" 
                               Foreground="#4C6EF5" Margin="0,0,0,10"/>

                    <ListView Grid.Row="1" ItemsSource="{Binding Modems}" 
                              Background="Transparent" BorderThickness="0"
                              ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#3D3D4D" CornerRadius="8" Padding="15" Margin="0,5">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <CheckBox IsChecked="{Binding IsSelected}" VerticalAlignment="Center" Margin="0,0,15,0"/>

                                        <StackPanel Grid.Column="1">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding Index, StringFormat='مودم {0}'}" 
                                                           FontSize="16" FontWeight="Bold" Foreground="White"/>
                                                <TextBlock Text="{Binding PortName, StringFormat=' - {0}'}" 
                                                           FontSize="14" Foreground="#888" VerticalAlignment="Center"/>
                                            </StackPanel>
                                            <TextBlock Text="{Binding PhoneNumber}" FontSize="18" 
                                                       Foreground="#40C057" FontWeight="SemiBold" Margin="0,5,0,0"/>
                                            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                                <TextBlock Text="{Binding Operator}" FontSize="12" Foreground="#888"/>
                                                <TextBlock Text=" | " FontSize="12" Foreground="#666"/>
                                                <TextBlock Text="{Binding SignalStrength, StringFormat='الإشارة: {0}'}" 
                                                           FontSize="12" Foreground="#888"/>
                                            </StackPanel>
                                            <TextBlock Text="{Binding LastResponse}" FontSize="12" 
                                                       Foreground="#FD7E14" TextWrapping="Wrap" Margin="0,5,0,0"
                                                       MaxWidth="400"/>
                                        </StackPanel>

                                        <Border Grid.Column="2" CornerRadius="5" Padding="10,5" VerticalAlignment="Top">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Background" Value="#4C6EF5"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Status}" Value="نجح">
                                                            <Setter Property="Background" Value="#40C057"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="فشل">
                                                            <Setter Property="Background" Value="#E03131"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="جاري التنفيذ...">
                                                            <Setter Property="Background" Value="#FD7E14"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <TextBlock Text="{Binding Status}" FontSize="12" Foreground="White"/>
                                        </Border>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </Border>

            <!-- Results -->
            <Border Grid.Column="1" Style="{StaticResource CardPanel}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="نتائج التنفيذ" FontSize="18" FontWeight="Bold" 
                               Foreground="#40C057" Margin="0,0,0,10"/>

                    <ListView Grid.Row="1" ItemsSource="{Binding Results}" 
                              Background="Transparent" BorderThickness="0">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border CornerRadius="8" Padding="15" Margin="0,5">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="#3D3D4D"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsSuccess}" Value="True">
                                                    <Setter Property="BorderBrush" Value="#40C057"/>
                                                    <Setter Property="BorderThickness" Value="2,0,0,0"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding IsSuccess}" Value="False">
                                                    <Setter Property="BorderBrush" Value="#E03131"/>
                                                    <Setter Property="BorderThickness" Value="2,0,0,0"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <StackPanel>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding ModemIndex, StringFormat='مودم {0}'}" 
                                                       FontSize="14" FontWeight="Bold" Foreground="White"/>
                                            <TextBlock Text="{Binding PhoneNumber, StringFormat=' ({0})'}" 
                                                       FontSize="14" Foreground="#888"/>
                                            <TextBlock Text="{Binding UssdCode, StringFormat=' - {0}'}" 
                                                       FontSize="14" Foreground="#4C6EF5"/>
                                        </StackPanel>
                                        <TextBlock Text="{Binding Response}" FontSize="14" 
                                                   Foreground="#40C057" TextWrapping="Wrap" Margin="0,10,0,0"/>
                                        <TextBlock Text="{Binding Timestamp, StringFormat='hh:mm:ss tt'}" 
                                                   FontSize="10" Foreground="#666" Margin="0,5,0,0"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="3" Style="{StaticResource CardPanel}" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="{Binding StatusMessage}" FontSize="14" Foreground="#888" VerticalAlignment="Center"/>
                
                <ProgressBar Grid.Column="1" Width="200" Height="10" 
                             IsIndeterminate="{Binding IsProcessing}"
                             Background="#2D2D3D" Foreground="#4C6EF5"
                             Visibility="{Binding IsProcessing, Converter={StaticResource BoolToVisConverter}}"/>
            </Grid>
        </Border>
    </Grid>
</Window>
